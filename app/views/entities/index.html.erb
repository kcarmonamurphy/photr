<h1>Here are all your entities dawg</h1>

<p><%= link_to "Create a entity", new_entity_path %></p>

<table>

  <tr>
    <td>Name</td>
    <td>Path</td>
  </tr>

  <% @entities.each do |entity| %>
    <tr>
      <td><%= entity.name %></td>
      <td><%= entity.path%></td>
      <td><%= link_to "Edit", edit_entity_path(entity) %></td>
      <td><%= link_to "Show", entity_path(entity) %></td>
      <td><%= link_to "Delete", entity_path(entity), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>

</table>
<div class="tw-m-4">
  {{ui/heading level=2 text=model.name}}

  <hr class="tw-my-2">

  <div class="tw-my-2">
    {{ui/heading level=4 text="Name"}}
    {{ui/text-input
      id="name"
      name="name"
      placeholder="Name"
      label="Name"
      value=model.name
    }}
  </div>

  <div class="tw-my-2">
    {{ui/heading level=4 text="Email"}}
    {{ui/text-input
      id="email"
      name="email"
      placeholder="Email"
      label="Email"
      value=model.email
    }}
  </div>

  <div class="tw-my-2">
    {{ui/heading level=4 text="New Password"}}
    {{ui/text-input
      id="password"
      name="password"
      placeholder="Enter a new password"
      label="Password"
      value=model.password
    }}
  </div>

  <hr class="tw-my-2">

  <div class="tw-my-2">
    {{#link-to "authenticated.users.index"}}Back to users list{{/link-to}} |
    {{#link-to "authenticated.users.edit" model}}Edit{{/link-to}}
  </div>
  
</div>
<input
  id={{id}}
  name={{name}}
  placeholder={{placeholder}}
  oninput={{action "updateValue" value="target.value"}}
  value={{value}}
  type={{inputType}}
  disabled={{disabled}}
  autocomplete={{autocomplete}}
  class="tw-h-10 tw-rounded-md tw-w-full tw-p-2
  tw-border tw-border-{{borderColor}} focus:tw-border-{{activeBorderColor}} hover:tw-border-{{activeBorderColor}} focus:tw-outline-none
  tw-bg-{{bgColor}} focus:tw-bg-white"
>
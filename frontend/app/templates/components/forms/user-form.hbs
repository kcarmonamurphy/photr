  <Ui::Form @object={{this.changeset}} @onSubmit={{action 'formSubmit'}} as |form|>
    <Ui::Heading @level={{2}}>
      {{#if isEditing}}
        Edit user {{this.changeset.id}}
      {{else}}
        User {{this.changeset.id}}
      {{/if}}
    </Ui::Heading>

    <div class="tw-my-2">
      <Ui::Heading @level={{4}}>Name</Ui::Heading>
      {{#if isEditing}}
        <form.text-input
          @id="name"
          @name="name"
          @placeholder="Name"
          @label="Name"
          @value={{model.name}}
        />
      {{else}}
        <div class="tw-h-10 tw-items-center tw-flex">
          <Ui::Text @text={{model.name}} />
        </div>
      {{/if}}
    </div>

    <div class="tw-my-2">
      <Ui::Heading @level={{4}}>Email</Ui::Heading>
      {{#if isEditing}}
        <form.text-input
          @id="email"
          @name="email"
          @placeholder="Email"
          @label="Email"
          @value={{model.email}}
        />
      {{else}}
        <div class="tw-h-10 tw-items-center tw-flex">
          <Ui::Text @text={{model.email}} />
        </div>
      {{/if}}
    </div>

    <div class="tw-my-2">
      {{#if isEditing}}
        <Ui::Heading @level={{4}}>New Password</Ui::Heading>
        <form.text-input
          @id="password"
          @name="password"
          @placeholder="Password"
          @label="Password"
          @value={{model.password}}
        />
      {{else}}
        <Ui::Heading @level={{4}}>Password</Ui::Heading>
        <div class="tw-h-10 tw-items-center tw-flex">
          <Ui::Text @text="*******" />
        </div>
      {{/if}}
    </div>

    <div class="tw-my-2">
      <Ui::Heading @level={{4}}>Created At</Ui::Heading>
      <div class="tw-h-10 tw-items-center tw-flex">
        <Ui::Text @text={{model.createdAt}} />
      </div>
    </div>

    <div class="tw-my-2">
      <Ui::Heading @level={{4}}>Updated At</Ui::Heading>
      <div class="tw-h-10 tw-items-center tw-flex">
        <Ui::Text @text={{model.updatedAt}} />
      </div>
    </div>

    <div class="tw-my-2">
      <Ui::Heading @level={{4}}>Roles</Ui::Heading>
      <div class="tw-h-10 tw-items-center tw-flex">
        {{#each model.roles as |role|}}
          <Ui::LinkTo @type="tertiary" @route="authenticated.roles.detail" @model={{role}}>
            {{role.name}}
          </Ui::LinkTo>
        {{/each}}
      </div>
    </div>

    <hr class="tw-my-6">

    <div class="tw-flex tw-justify-between tw-items-center">
      {{#if isEditing}}
        <Ui::LinkTo @type="tertiary" @route="authenticated.users.detail" @model={{model.id}}>
          Cancel
        </Ui::LinkTo>
      {{else}}
        <Ui::LinkTo @type="tertiary" @route="authenticated.users.index">
          Back to users list
        </Ui::LinkTo>
      {{/if}}

      {{#if isEditing}}
        <form.submit>Submit</form.submit>
      {{else}}
        <Ui::LinkTo @type="primary" @route="authenticated.users.edit" @model={{model.id}}>
          Edit
        </Ui::LinkTo> 
      {{/if}}
    </div>
  </Ui::Form>
